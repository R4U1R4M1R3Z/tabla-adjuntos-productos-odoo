<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_adjuntos_form" model="ir.ui.view">
        <field name="name">Vista formulario de adjuntos</field>
        <field name="model">product.attachment</field>
        <field name="arch" type="xml">
            <form>
                <field name="attachment" filename="attachment_filename" />
                <field name="attachment_filename" invisible="1"/>
                <field name="date" />
            </form>
        </field>
    </record>

    <record id="view_adjuntos_tree" model="ir.ui.view">
        <field name="name">Vista tree de adjuntos</field>
        <field name="model">product.attachment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="attachment_filename" />
                <field name="date" />
            </tree>
        </field>
    </record>
</odoo>
